<div class="container">
  <div class="row">
    <h4>分類</h4>
    <div class="genre-make">
      <%= form_with model: @genre, url: users_genres_path, local: true do |f| %>
        分類：<%= f.text_field :name %>
        <%= f.submit "作成", class: "btn btn-success" %>
      <% end %>
    </div>
    <div class="genre-list">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>分類名</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "訂正", edit_users_genre_path(genre), class: "btn btn-warning btn-sm" %></td>
              <td><%= link_to "削除", users_genre_path(genre), method: :delete, class: "btn btn-danger btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

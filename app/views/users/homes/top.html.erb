<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6 text-center border m-2 p-2">
      <h4>Footprint → 足　跡</h4>
      <%= image_tag 'footprint.png', class: "rounded-circle border", size: "100x100" %>
      <div class="genre-choice card-group m-5">
        <% @genres.each do |genre| %>
          <div class="card" style="15rem;">
            <div class="card-img-top">
              <%=  %>
            </div>
            <div class="card-body">
              <div class="card-title">
                <%= genre.name %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>
